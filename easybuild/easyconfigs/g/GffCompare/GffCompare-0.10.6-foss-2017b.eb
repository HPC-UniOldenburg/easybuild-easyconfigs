# This file is an EasyBuild reciPY as per https://github.com/easybuilders/easybuild

easyblock = 'MakeCp'

name = 'GffCompare'
version = '0.10.6'

homepage = 'https://github.com/gpertea/%(namelower)s'
description = """GffCompare provides classification and reference annotation mapping and
 matching statistics for RNA-Seq assemblies (transfrags) or other generic GFF/GTF files."""

toolchain = {'name': 'foss', 'version': '2017b'}
toolchainopts = {'pic': True}

gclib_version = '0.10.6'

source_urls = [
    'http://ccb.jhu.edu/software/stringtie/dl',
]
sources = [
    SOURCELOWER_TAR_GZ,
]

checksums = [
    'bff377cd81a546af165e50aa61cadacd26b31e8026120ff36e2272441f63a512',  # gffcompare-0.10.6.tar.gz
]

files_to_copy = ['%(namelower)s', 'LICENSE', 'README.md']

modextrapaths = {'PATH': ''}

sanity_check_paths = {
    'files': ['%(namelower)s'],
    'dirs': []
}

sanity_check_commands = ['%(namelower)s -v']

moduleclass = 'bio'
