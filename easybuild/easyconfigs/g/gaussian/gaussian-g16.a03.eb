# easyconfig file for Gaussian 16 Rev. A.03
easyblock = 'PackedBinary'

name = 'gaussian'
version = 'g16.a03'

description = """Gaussian is a computer program for computational quantum chemistry
that includes various methods for electronic structure calculations."""
homepage = "http://www.gaussian.com/"

toolchain = {'name': 'dummy', 'version': 'dummy'}

# license needed, download manually
sources = ['%(namelower)s-%(version)s.tar.bz2']
checksums = ['b1a908c4f7a59b1422921cc28bccec415c85fb0608ac0abbe00fe2aa44dfc350']

postinstallcmds = ['chgrp -R %(namelower)s %(installdir)s/g16']
postinstallcmds += ['chmod -R o-rwx %(installdir)s/g16']

sanity_check_paths = {
    'files': [],
    'dirs': ['g16']
}

modextrapaths = {
    'PATH': ['g16', 'g16/bsd'],
    'LD_LIBRARY_PATH': ['g16', 'g16/bsd']
}

modextravars = {
    'g16root': '%(installdir)s',
    'GAUSS_EXEDIR': '%(installdir)s/g16/bsd:%(installdir)s/g16',
    'GAUSS_BSDDIR': '%(installdir)s/g16/bsd',
    'G16BASIS': '%(installdir)s/g16/basis',
    'GAUSS_SCRDIR': '',
    '_DSM_BARRIER': 'SHM',
    'PGI_TERM': 'trace,abort'
}

modluafooter = 'setenv("GAUSS_CHKDIR", pathJoin(os.getenv("HOME"), "g16/CHK"))'
modtclfooter = 'setenv("GAUSS_CHKDIR", pathJoin(os.getenv("HOME"), "g16/CHK"))'

modaliases = {'sl': '%(installdir)s/g16/tests/searchlog.csh'}

moduleclass = 'chem'
