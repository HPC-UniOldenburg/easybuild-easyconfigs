+      exit 1;
+  fi
+  # remove directory from list of files
+  flist="echo $@ | sed s/$dir \*\$//";
+  for fn in $flist ; do
+      f1=`${FSLDIR}/bin/remove_ext $fn`;
+      # do the copies
+      if [ -f ${f1}.hdr ] ; then /bin/cp ${f1}.hdr ${dir} ; fi
+      if [ -f ${f1}.hdr.gz ] ; then /bin/cp ${f1}.hdr.gz ${dir} ; fi
+      if [ -f ${f1}.img ] ; then /bin/cp ${f1}.img ${dir} ; fi
